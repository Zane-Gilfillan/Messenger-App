<div class="card edit-showcase">
    <h3 class="card-header" style="font-size: 2rem;">edit and update your question</h3>
    <form class="card-body edit-post-form">
        <label for="post-title" class="form-label">Title</label>
        <input name="post-title" type="text" value="{{post.title}}" class="form-input" style="border-top: none; border-right: none; border-left: none; margin: 2rem 0;" />


        {{!-- <label class="form-label" for="content">Content</label> --}}
        {{!-- <input name="content" type="text" value="{{post.content}}" class="form-input" /> --}}
        <textarea id="content" value="{{post.content}}" class="form-input text-area" name="content" style="height: 50rem; width: 80rem; font-size: 1.5rem; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19); border-radius: 1.5rem; border: rgba(138, 138, 138, 0.767) .2rem solid;">{{post.content}}</textarea>

        <button type="submit" class="edit-post-btn btn">update</button>
        <button type="button" class="delete-post-btn btn">delete</button>
    </form>
</div>


<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>